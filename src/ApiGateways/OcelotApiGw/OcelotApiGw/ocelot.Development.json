        {
          "Host": "catalog.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Products/Category",
      "UpstreamhttpMethod": [ "GET" ],
      "SwaggerKey": "Products"
    },
    {
      "DownstreamPathTemplate": "/api/v1/Products/SubCategory",
      "DownstreamScheme": "http",
